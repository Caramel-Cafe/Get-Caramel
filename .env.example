# Environment

Copy this file to `.env` during local setup.

AUTH_SERVICE_PORT=4001
AUTH_JWT_SECRET=replace_this_with_long_random_secret
AUTH_ACCESS_TTL_SEC=900
AUTH_REFRESH_TTL_SEC=604800
AUTH_PASSWORD_RESET_TTL_SEC=900
AUTH_ADMIN_INVITE_CODE=replace_with_private_invite_code

CATALOG_SERVICE_PORT=4002
ORDER_SERVICE_PORT=4003
PAYMENT_SERVICE_PORT=4004
DELIVERY_SERVICE_PORT=4005
GATEWAY_PORT=4000

# Shared infrastructure
# Use a shared DATABASE_URL or service-specific URLs below.
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/get_caramel
ORDER_DATABASE_URL=
PAYMENT_DATABASE_URL=
REDIS_URL=redis://localhost:6379
PAYMENT_PROVIDER=local
PESAPAL_CONSUMER_KEY=
PESAPAL_CONSUMER_SECRET=
SENTRY_DSN_BACKEND=
NEXT_PUBLIC_SENTRY_DSN_WEB=
EXPO_PUBLIC_SENTRY_DSN_MOBILE=

# Gateway upstream routing
AUTH_SERVICE_URL=http://127.0.0.1:4001
CATALOG_SERVICE_URL=http://127.0.0.1:4002
ORDER_SERVICE_URL=http://127.0.0.1:4003
PAYMENT_SERVICE_URL=http://127.0.0.1:4004
DELIVERY_SERVICE_URL=http://127.0.0.1:4005

# Release/ops
BACKUP_DIR=ops/backup/artifacts
RETENTION_DAYS=14

# Customer app
EXPO_PUBLIC_APP_ENV=local
EXPO_PUBLIC_GATEWAY_BASE_URL=http://127.0.0.1:4000

# Web apps
NEXT_PUBLIC_APP_ENV=local
NEXT_PUBLIC_GATEWAY_BASE_URL=http://127.0.0.1:4000
